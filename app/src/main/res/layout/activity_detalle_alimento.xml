<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detalle_contenido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.DetalleAlimentoActivity"
    tools:ignore="MissingPrefix">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imagen_alimento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@drawable/material_flat"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <TextView
                        fontPath="fonts/dosis-regular.ttf"
                        android:id="@+id/nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CEBOLLA"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textColor="#90000000"
                        android:textSize="35sp"
                        />
                    <LinearLayout
                        android:id="@+id/linear_contenedor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nombre"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/pais"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/if_1_2104664"
                                android:padding="15dp"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                />
                            <TextView
                                fontPath="fonts/dosis-light.ttf"
                                android:id="@+id/txtPais"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Descripción"
                                android:gravity="center"
                                android:textSize="20sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/origen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/if_1_2104664"
                                android:padding="15dp"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                />
                            <TextView
                                fontPath="fonts/dosis-light.ttf"
                                android:id="@+id/txtOrigen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Descripción"
                                android:gravity="center"
                                android:textSize="20sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/tipo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/if_1_2104664"
                                android:padding="15dp"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                />
                            <TextView
                                fontPath="fonts/dosis-light.ttf"
                                android:id="@+id/txtTipo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Descripción"
                                android:gravity="center"
                                android:textSize="20sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/separator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="#E7E0E0"
                        android:layout_below="@id/linear_contenedor" />
                    <TextView
                        fontPath="fonts/dosis-semibold.ttf"
                        android:id="@+id/beneficiostxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separator"
                        android:text="BENEFICIOS"
                        android:paddingTop="15dp"
                        android:paddingBottom="5dp"
                        android:textSize="18sp" />
                    <TextView
                        fontPath="fonts/dosis-light.ttf"
                        android:id="@+id/beneficios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/beneficiostxt"
                        android:text="-asdasdasdas\n-asdasdasasd\n-asdasdasasd"
                        android:paddingStart="35dp"
                        android:paddingLeft="35dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:textSize="18sp" />
                    <View
                        android:id="@+id/separator2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="#E7E0E0"
                        android:layout_below="@id/beneficios"/>
                    <TextView
                        fontPath="fonts/dosis-semibold.ttf"
                        android:id="@+id/contenido_nutricionaltxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separator2"
                        android:text="CONTENIDO NUTRICIONAL"
                        android:paddingTop="15dp"
                        android:textSize="18sp" />
                    <TextView
                        fontPath="fonts/dosis-light.ttf"
                        android:id="@+id/para100g"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contenido_nutricionaltxt"
                        android:text="(Para 100 gramos)"
                        android:paddingTop="1dp"
                        android:paddingBottom="5dp"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:id="@+id/linear_contenedor2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/para100g"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                            <TextView
                                fontPath="fonts/dosis-light.ttf"
                                android:id="@+id/calorias_cantidad"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="15 gr"
                                android:background="@drawable/borde"
                                android:gravity="center"
                                android:textSize="20sp"
                                />
                            <TextView
                                fontPath="fonts/dosis-semibold.ttf"
                                android:id="@+id/txtCalorias"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CALORÍAS"
                                android:gravity="center"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                            <TextView
                                fontPath="fonts/dosis-light.ttf"
                                android:id="@+id/fibra_cantidad"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/borde"
                                android:text="20 gr"
                                android:gravity="center"
                                android:textSize="20sp"/>
                            <TextView
                                fontPath="fonts/dosis-semibold.ttf"
                                android:id="@+id/txtFibra"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FIBRA"
                                android:gravity="center"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                            <TextView
                                fontPath="fonts/dosis-light.ttf"
                                android:id="@+id/proteinas_cantidad"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/borde"
                                android:text="20 gr"
                                android:gravity="center"
                                android:textSize="20sp"/>
                            <TextView
                                fontPath="fonts/dosis-semibold.ttf"
                                android:id="@+id/txtProteinas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PROTEÍNAS"
                                android:gravity="center"
                                android:textSize="15sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        fontPath="fonts/dosis-semibold.ttf"
                        android:id="@+id/minerales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_contenedor2"
                        android:text="MINERALES"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:textSize="15sp" />
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart"
                        android:layout_below="@id/minerales"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp">
                    </com.github.mikephil.charting.charts.PieChart>
                    <View
                        android:id="@+id/separator3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="#E7E0E0"
                        android:layout_below="@id/chart"/>
                    <TextView
                        fontPath="fonts/dosis-semibold.ttf"
                        android:id="@+id/tipstxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separator3"
                        android:text="TIPS"
                        android:paddingTop="15dp"
                        android:paddingBottom="5dp"
                        android:textSize="18sp" />
                    <TextView
                        fontPath="fonts/dosis-light.ttf"
                        android:id="@+id/tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tipstxt"
                        android:text="-asdasdasdas\n-asdasdasasd\n-asdasdasasd"
                        android:paddingStart="35dp"
                        android:paddingLeft="35dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>