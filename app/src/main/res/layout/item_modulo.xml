<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="15dp"
    app:contentPadding="10dp"
    tools:ignore="ContentDescription, MissingPrefix">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/picture_image"
                app:srcCompat="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/transparent_white_75"
                android:layout_alignBottom="@id/picture_image">
                <TextView
                    fontPath="fonts/dosis-light.ttf"
                    android:id="@+id/titulo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:textColor="#FFFFFF"
                    android:text="TÃ­tulo"
                    android:textSize="28sp"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/desplegableButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ic_expand_less_black_36dp" />
            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:text="INICIAR"
                android:textColor="#FFFF"
                android:background="@drawable/boton_verde_redondo"
                android:layout_toEndOf="@+id/desplegableButton"

                />
        </RelativeLayout>

        <TextView
            android:id="@+id/desc_text"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:lineSpacingExtra="8dp"
            android:padding="15dp"
            android:textSize="18sp"
            android:text="Descripcion ira aqui"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#000000"
            android:visibility="gone" />

    </LinearLayout>

</android.support.v7.widget.CardView>